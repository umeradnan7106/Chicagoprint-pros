// Prisma Schema ‚Äî PostgreSQL + Supabase Ready Setup
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// üß† Session model ‚Äî Shopify session storage
model Session {
  id            String    @id
  shop          String    @db.VarChar(255)
  state         String
  isOnline      Boolean   @default(false)
  scope         String?
  expires       DateTime?
  accessToken   String
  userId        BigInt?
  firstName     String?
  lastName      String?
  email         String?
  accountOwner  Boolean   @default(false)
  locale        String?
  collaborator  Boolean?  @default(false)
  emailVerified Boolean?  @default(false)

  @@index([shop])
}

// üõç Custom Product model
model CustomProduct {
  id        Int             @id @default(autoincrement())
  shopifyId String          @unique
  title     String
  image     String?
  basePrice Float
  variants  CustomVariant[]
  createdAt DateTime        @default(now())
  updatedAt DateTime        @updatedAt
}

// üéØ Variants for each product
model CustomVariant {
  id          Int             @id @default(autoincrement())
  title       String
  price       Float
  inventory   Int             @default(0)
  product     CustomProduct   @relation(fields: [productId], references: [id])
  productId   Int
}
