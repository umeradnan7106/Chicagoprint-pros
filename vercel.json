{
  "buildCommand": "remix build",
  "framework": "remix",
  "installCommand": "npm install",
  "functions": {
    "build/index.js": {
      "maxDuration": 30
    }
  },
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/build/index.js"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Frame-Options", 
          "value": "ALLOWALL"
        },
        {
          "key": "Content-Security-Policy",
          "value": "frame-ancestors 'self' https://*.shopify.com https://admin.shopify.com"
        }
      ]
    }
  ]
}